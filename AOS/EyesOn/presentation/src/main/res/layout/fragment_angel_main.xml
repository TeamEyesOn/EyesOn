<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.d201.eyeson.view.angel.main.AngelMainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_angel"
        tools:context=".view.angel.main.AngelMainFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EyesOn"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/angel_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_baseline_settings_white_24"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tv_title_my_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="18sp"
                    android:text="my history"
                    android:textColor="@color/angel_text"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_history"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_my_history"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="8dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_graph"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_margin="16dp"
                            android:src="@drawable/img_graph"/>

                        <TextView
                            android:id="@+id/tv_complaints_cnt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="민원 신청 수"
                            app:layout_constraintTop_toBottomOf="@id/iv_graph"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_help_cnt_title"
                            />

                        <TextView
                            android:id="@+id/tv_complaints_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10"
                            android:text="@{vm.angelInfo.compCnt}"
                            app:layout_constraintStart_toStartOf="@id/tv_complaints_cnt_title"
                            app:layout_constraintEnd_toEndOf="@id/tv_complaints_cnt_title"
                            app:layout_constraintTop_toBottomOf="@id/tv_complaints_cnt_title"/>

                        <TextView
                            android:id="@+id/tv_help_cnt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="도움 응답 수"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_complaints_cnt_title"
                            app:layout_constraintStart_toEndOf="@id/tv_complaints_cnt_title"/>

                        <TextView
                            android:id="@+id/tv_help_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="100"
                            android:text="@{vm.angelInfo.helpCnt}"
                            app:layout_constraintTop_toTopOf="@id/tv_complaints_cnt"
                            app:layout_constraintStart_toStartOf="@id/tv_help_cnt_title"
                            app:layout_constraintEnd_toEndOf="@id/tv_help_cnt_title"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_title_complaints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="complaints"
                    android:textColor="@color/angel_text"
                    app:layout_constraintTop_toBottomOf="@id/cv_history"
                    android:layout_marginVertical="24dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_complaints_list"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_complaints"
                    android:layout_marginVertical="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"/>

                <TextView
                    android:id="@+id/tv_title_help_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="help guide"
                    android:textSize="18sp"
                    android:textColor="@color/angel_text"
                    app:layout_constraintTop_toBottomOf="@id/rv_complaints_list"
                    android:layout_marginVertical="16dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_complaints_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_help_guide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cv_response_help"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_complaints_list"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/img_complaints_list"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.4" />

                        <TextView
                            android:id="@+id/tv_complaints_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="민원 목록"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/iv_complaints_list"
                            app:layout_constraintStart_toStartOf="@id/iv_complaints_list"
                            app:layout_constraintEnd_toEndOf="@id/iv_complaints_list"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginVertical="16dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_response_help"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toTopOf="@id/cv_complaints_list"
                    app:layout_constraintStart_toEndOf="@id/cv_complaints_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cv_complaints_list"
                    android:layout_marginHorizontal="16dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_response_help"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/img_answer_help"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.4" />

                        <TextView
                            android:id="@+id/tv_response_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="도움 응답"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/iv_response_help"
                            app:layout_constraintStart_toStartOf="@id/iv_response_help"
                            app:layout_constraintEnd_toEndOf="@id/iv_response_help"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginVertical="16dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ㅇㅇㅇ엔젤님\n안녕하세요 \n우리 이름 정보 없는데?"
                    android:textSize="24sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/cv_complaints_list"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginVertical="24dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>