<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_user"
        tools:context=".view.blind.BlindMainFragment">

        <LinearLayout
            android:id="@+id/layout_tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_marginHorizontal="24dp"
            android:contentDescription="@string/frag_main"
            >

            <TextView
                android:includeFontPadding="false"
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:text="EyesOn"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:contentDescription="@string/eyesOn"
                android:importantForAccessibility="no"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@id/btn_setting"
            app:layout_constraintTop_toTopOf="@id/layout_tv_logo"
            app:layout_constraintBottom_toBottomOf="@id/layout_tv_logo"
            android:background="@drawable/ic_notification"
            android:contentDescription="@string/alarm" />

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/layout_tv_logo"
            app:layout_constraintBottom_toBottomOf="@id/layout_tv_logo"
            app:layout_constraintTop_toBottomOf="@id/btn_notification"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ic_setting"
            android:contentDescription="@string/setting"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_scan_text"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/btn_border_white"
            android:text="글자 보기"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_tv_logo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_find_object"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="24dp"
            android:text="물건 찾기"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/btn_border_white"
            app:layout_constraintTop_toBottomOf="@id/btn_scan_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_scan_obstacle"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:text="장애물 인식"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/btn_border_white"
            app:layout_constraintTop_toBottomOf="@id/btn_find_object"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:text="도움 요청"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/btn_border_white"
            app:layout_constraintTop_toBottomOf="@id/btn_scan_obstacle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complaints"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:text="민원 신청 및 확인"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/btn_border_white"
            app:layout_constraintTop_toBottomOf="@id/btn_help"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>