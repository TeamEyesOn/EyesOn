<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.join.SelectRoleFragment"
        android:background="@drawable/gradient_user"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:layout_marginBottom="80dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="도움이 필요하신가요?"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_select_blind"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_blind"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_button_corner"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            android:text="도움이 필요해요"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_select_angel"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_angel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="160dp"
            android:background="@drawable/shape_button_corner"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            android:text="도움을 주고싶어요"
            app:layout_constraintTop_toBottomOf="@id/btn_select_blind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>